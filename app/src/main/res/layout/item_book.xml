<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">
    <ImageView
        android:id="@+id/imgBookCover"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/godfather"
        app:layout_constraintBottom_toTopOf="@+id/txtBookName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txtBookName"
        android:layout_width="wrap_content"
        style="@style/Text_White_15"
        android:layout_marginTop="@dimen/margin_5dp"
        tools:text="The GodFather"
        app:layout_constraintTop_toBottomOf="@+id/imgBookCover"
        app:layout_constraintBottom_toTopOf="@+id/txtAuthor"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtAuthor"
        android:layout_width="wrap_content"
        style="@style/Text_White_13"
        android:layout_marginTop="@dimen/margin_3dp"
        tools:text="@string/book_author"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>